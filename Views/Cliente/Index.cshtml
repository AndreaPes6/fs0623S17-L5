@model List<HotelSoloRicchi.Models.Cliente>
@using HotelSoloRicchi.Models

@{
    ViewBag.Title = "Clienti";
}

<h2>Clienti</h2>

<div class="container p-0">
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Add", "Cliente", new { area = "" })" class="btn btn-primary">Aggiungi Prenotazione</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count == 0)
            {
                <h3>Non ci sono Clienti al momento</h3>
            }
            else
            {
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Cognome</th>
                            <th scope="col">Email</th>
                            <th scope="col">CF</th>
                            <th scope="col">Provincia</th>
                            <th scope="col">Città</th>
                            <th scope="col">Numero di Telefono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Cognome</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.CF</td>
                                <td>@cliente.Provincia</td>
                                <td>@cliente.Città</td>
                                <td>@cliente.NumeroTelefono</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
