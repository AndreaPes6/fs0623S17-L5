@model List<HotelSoloRicchi.Models.Cliente>
@using HotelSoloRicchi.Models

@{
    ViewBag.Title = "Clienti";
}

<h2>Clienti</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono Clienti al momento</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Email</th>
                <th>CF</th>
                <th>Provincia</th>
                <th>Città</th>
                <th>Numero di Telefono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Cognome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.CF</td>
                    <td>@cliente.Provincia</td>
                    <td>@cliente.Città</td>
                    <td>@cliente.NumeroTelefono</td>
                </tr>
            }
        </tbody>
    </table>
}
